{
// Enforcing
    "bitwise": true,     // true: Prohibit bitwise operators (&, |, ^, etc.)
    "curly": true,     // true: Require {} for every new block or scope
    "eqeqeq": true,     // true: Require triple equals (===) for comparison
    "esversion": 5,        // enable syntax first defined in the ECMAScript 5.1 specification.
                            // This includes allowing reserved keywords as object properties.
    "forin": true,     // true: Require filtering for..in loops with obj.hasOwnProperty()
    "freeze": true,     // true: Prohibit overwriting prototypes of native objects such as Array, Date and so on.
    "funcscope": true,  // true: suppresses warnings about declaring variables inside of control structures
                        // while accessing them later from the outside.
    "futurehostile": true,   // enables warnings about the use of identifiers defined in future versions of JavaScript
    "iterator": true,   // suppresses warnings about the __iterator__ property
    "latedef": true,    // true: Require variables/functions to be defined before being used
    "noarg": true,     // true: Prohibit use of `arguments.caller` and `arguments.callee`
    "nocomma": true,    // true: prohibits the use of the comma operator
    "nonbsp": true,     // true: warn about "non-breaking whitespace" characters --> can break non-UTF8 web pages
    "nonew": true,    // true: Prohibit use of constructors for side-effects (without assignment)
    "notypeof": true,   // true: suppresses warnings about invalid typeof operator values.
    "shadow": false,     // false: suppresses warnings about variable shadowing
                        // i.e. declaring a variable that had been already declared somewhere in the outer scope.
    "singleGroups": true,   // prohibits the use of the grouping operator when it is not strictly required
    "strict": false,     // true: Requires all functions run in ES5 Strict Mode
    "undef": true,     // true: Require all non-global variables to be declared (prevents global leaks)
    "unused": true,     // true: Require all defined variables be used
    "maxcomplexity": false,    // {int} Max cyclomatic complexity per function
    "maxdepth": false,    // {int} Max depth of nested blocks (within functions)
    "maxerr": false,  // {int} # of warnings JSHint will produce before giving up. Default is 50.
    "maxparams": false,    // {int} Max number of formal params allowed per function
    "maxstatements": false,    // {int} Max number statements per function

// Relaxing
    "asi": false,     // Tolerate Automatic Semicolon Insertion (no semicolons)
    "boss": false,     // Tolerate assignments where comparisons would be expected
    "debug": false,     // Allow debugger statements e.g. browser breakpoints.
    "elision": false,   // JSHint that your code uses ES3 array elision elements, or empty elements
    "eqnull": false,     // Tolerate use of `== null`
    "evil": false,     // true: Tolerate use of `eval` and `new Function()`
    "expr": true,     // true: Tolerate use of expressions where normally you expect assignments or function calls
    "lastsemic": false,     // true: Tolerate omitting a semicolon for the last statement of a 1-line block
    "loopfunc": false,     // true: Tolerate functions being defined in loops
    "moz": false,       // true: code uses Mozilla JavaScript extensions - for Firefox specific dev only
    "noyield": false,    // suppresses warnings about generator functions with no yield statement in them.
    "plusplus": true,    // true: Prohibit use of `++` & `--`
    "proto": false,     // true: Tolerate using the `__proto__` property
    "scripturl": false,     // true: Tolerate script-targeted URLs
    "supernew": false,     // true: Tolerate `new function () { ... };` and `new Object;`
    "validthis": false,     // true: Tolerate using this in a non-constructor function
    "withstmt": false,  // suppresses warnings about the use of the with statement

// Environments
    "browser": false,     // Web Browser (window, document, etc)
    "browserify": false,
    "couch": false,    // CouchDB
    "devel": true,     // Development/debugging (alert, confirm, etc)
    "dojo": false,    // Dojo Toolkit
    "jasmine": false,
    "jquery": false,    // jQuery
    "mocha": true,  // defines globals exposed by the "BDD" and "TDD" UIs of the Mocha unit testing framework.
    "module": false,    // input code describes an ECMAScript 6 module. All module code interpreted as strict mode code.
    "mootools": false,    // MooTools
    "node": true,    // Node.js
    "nonstandard": false,    // Widely adopted globals (escape, unescape, etc)
    "phantom": true,    // PhantomJS
    "prototypejs": false,    // Prototype and Scriptaculous
    "qunit": false,
    "rhino": false,    // Rhino
    "shelljs": false,
    "typed": false,
    "worker": false,    // Web Workers
    "wsh": false,    // Windows Scripting Host
    "yui": false,    // Yahoo User Interface

// Custom Globals
    "globals": {
        "Ext": false,   // ExtJS
        "Icons": false, // singleton for Font-Awesome
        "Lists": false, // singleton containing standard lists
        "Session": false,    // singleton for storing session information
        /* MOCHA */
//        "describe" : false,
//        "it" : false,
//        "before" : false,
//        "beforeEach" : false,
//        "after" : false,
//        "afterEach" : false,
        /* CasperJS */
        "casper": false
    }        // additional predefined global variables
}
